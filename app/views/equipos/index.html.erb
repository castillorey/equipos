<p id="notice"><%= notice %></p>

<h1>Equipos</h1>
<%= link_to 'Nueva', new_equipo_path,class:'btn btn-primary btn-sm' %>
<hr>

<table id="equipos_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Id</th>
      <th class="text-center">Placa</th>
      <th class="text-center">Modelo</th>
      <th class="text-center">Serie</th>
      <th class="text-center">Marca</th>
      <th class="text-center">Estado</th>
      <th class="text-center">Tipo</th>
      <th class="text-center">Area</th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr>
        <td class="text-center"><a class="llaves" href="/equipos/<%= equipo['id'] %>"><%= equipo["id"] %></a></td>
        <td class="text-center"><%= equipo["placa"] %></td>
        <td class="text-center"><%= equipo["modelo"] %></td>
        <td class="text-center"><%= equipo["serie"] %></td>
        <td class="text-center"><%= equipo["marca"] %></td>
        <td class="text-center"><%= equipo["estado"] %></td>
        <td class="text-center"><%= equipo["tipo"] %></td>
        <td class="text-center"><%= equipo["area"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<iframe id="anexos_lista" src="/anexos_lista" frameborder="0" style="border:0;width:100%;height:600px;" scrolling="yes"></iframe>
<script>
    jQuery.noConflict();
    jQuery(document).ready(function(){
        jQuery('#equipos_data').DataTable();

    });
</script>


