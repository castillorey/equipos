
<h2>Anexos</h2>
<hr>

<%= link_to 'Nuevo', new_anexo_path,class:'btn btn-primary btn-sm' %>

<p id="notice"><%= notice %></p>
<table id="anexo_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Id</th>
      <th class="text-center">Nombre</th>
      <th class="text-center">Tipo</th>
      <th class="text-center">Ruta</th>
      <th class="text-center">Estado</th>
      <th class="text-center">Entidad</th>
      <th class="text-center">Tipo entidad</th>
    </tr>
  </thead>

  <tbody>
    <% @anexos.each do |anexo| %>
      <tr>
        <td class="text-center"><a class="llaves" href="/anexos/<%= anexo['id'] %>"><%= anexo["id"] %></a></td>
        <td class="text-center"><%= anexo["tipo"] %></td>
        <td class="text-center"><%= anexo["nombre"] %></td>
        <td class="text-center"><%= anexo["ruta"] %></td>
        <td class="text-center"><%= anexo["estado"] %></td>
        <td class="text-center"><%= anexo["entidad"] %></td>
        <td class="text-center"><%= anexo["tipoEntidad"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
    jQuery.noConflict();
    jQuery(document).ready(function(){
        jQuery('#anexo_data').DataTable();
    });

</script>
