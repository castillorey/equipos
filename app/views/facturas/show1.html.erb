
<h4> Informaci√≥n de Factura</h4>
<hr class="division">
<div class="container" id="contenido">
  <%= link_to 'Regresar', facturas_path,class:"btn btn-secondary" %>
  <%= link_to 'Modificar', edit_factura_path(@factura),class:"btn btn-success" %>
  <p id="notice"><%= notice %></p>

  <table class="table">
    <tr>
      <th class="text-center">No. factura</th>
      <th class="text-center">Fecha</th>
      <th class="text-center">Proveedor</th>
      <th class="text-center">Concepto</th>
      <th class="text-center">Valor</th>
      <th class="text-center">Estado</th>
    </tr>
    <tr>
      <td class="text-center"><%= @factura.numFactura %></td>
      <td class="text-center"><%= @factura.fecha.to_date %></td>
      <td class="text-center"><%= @facturas[@facturas.index{ |f| f["numFactura"] == @factura.numFactura}]["proveedor"] %></td>
      <td class="text-center"><%= @factura.concepto %></td>
      <td class="text-center"><%= number_to_currency(@factura.valor) %></td>
      <td class="text-center"><%= @facturas[@facturas.index{ |f| f["numFactura"] == @factura.numFactura}]["estado"] %></td>
    </tr>
  </table>
  <hr>
  <iframe id="consumo_lista" src="/consumo_lista/<%= @factura.id %>" frameborder="0" style="border:0;width:100%;height:600px;" scrolling="yes"></iframe>
</div>
