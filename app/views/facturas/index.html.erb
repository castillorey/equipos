<p id="notice"><%= notice %></p>

<h1>Facturas</h1>
<%= link_to 'Nueva', new_factura_path,class:'btn btn-primary btn-sm' %>
<hr>

<table id="facturas_data" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">No. factura</th>
      <th class="text-center">Fecha</th>
      <th class="text-center">Proveedor</th>
      <th class="text-center">Concepto</th>
      <th class="text-center">Valor</th>
      <th class="text-center">Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><a class="llaves" href="/facturas/<%= factura['numFactura'] %>"><%= factura['numFactura'] %></a></td>
        <td><%= factura["fecha"]%></td>
        <td><%= factura["proveedor"] %></td>
        <td><%= factura["concepto"] %></td>
        <td><%= number_to_currency(factura["valor"]) %></td>
        <td><%= factura["estado"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
    jQuery.noConflict();
    jQuery(document).ready(function(){
        jQuery('#facturas_data').DataTable();

    });
</script>

